<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.Tab_Course">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <LinearLayout
            android:background="#4697F8"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <ImageView
                android:id="@+id/fProfile_ImgAvatar"
                android:src="@drawable/avatar_local"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
            <TextView
                android:text="Nguyễn Trọng Nhân"
                android:layout_gravity="center"
                android:textColor="#F8F8F5"
                android:textStyle="bold"
                android:layout_marginTop="3dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="#F8F8F5"
            android:layout_marginTop="125dp"
            android:layout_width="320dp"
            app:cardCornerRadius="10dp"
            android:layout_centerHorizontal="true"
            android:layout_height="45dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="ID"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textColor="#ABADAD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="PS10674"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:textColor="#2788FD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="COURSE"
                        android:textStyle="bold"
                        android:textColor="#ABADAD"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="LT15101"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:textColor="#2788FD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="STATUS"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textColor="#ABADAD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="HDI"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:textColor="#2788FD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="65dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/address"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:text="HO CHI MINH CITY, VIET NAM"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textColor="#9C9C97"
                android:layout_height="wrap_content"/>
        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/mail"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:id="@+id/fProfile_TxtMail"
                android:text="nhanntps10674@fpt.edu.vn"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textColor="#9C9C97"
                android:layout_height="wrap_content"/>
        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/phone"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:text="+84-999-999-999"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textColor="#9C9C97"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/user_id"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:id="@+id/fProfile_TxtType"
                android:text="Local"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textColor="#9C9C97"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>