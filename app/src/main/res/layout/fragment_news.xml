<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.Tab_Course">
   <ViewFlipper
       android:id="@+id/fNews_VF"
       android:layout_width="match_parent"
       android:layout_height="130dp">
      <ImageView
          android:scaleType="fitXY"
          android:src="@drawable/ads1"
          android:layout_width="match_parent"
          android:layout_height="match_parent"/>
      <ImageView
          android:scaleType="fitXY"
          android:src="@drawable/ads2"
          android:layout_width="match_parent"
          android:layout_height="match_parent"/>
      <ImageView
          android:scaleType="fitXY"
          android:src="@drawable/ads3"
          android:layout_width="match_parent"
          android:layout_height="match_parent"/>
      <ImageView
          android:scaleType="fitXY"
          android:src="@drawable/ads4"
          android:layout_width="match_parent"
          android:layout_height="match_parent"/>
   </ViewFlipper>
   <TextView
       android:id="@+id/fNews_TxtTitle"
       android:layout_below="@+id/fNews_VF"
       android:text="Daily News"
       android:textColor="#0473F8"
       android:textStyle="bold"
       android:gravity="center"
       android:textSize="18sp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"/>

   <ListView
       android:id="@+id/fNews_ListViewRss"
       android:layout_below="@+id/fNews_TxtTitle"
       android:layout_marginTop="3dp"
       android:dividerHeight="5dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"/>
</LinearLayout>